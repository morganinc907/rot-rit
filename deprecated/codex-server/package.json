{
  "name": "codex-websocket-server",
  "version": "1.0.0",
  "description": "Real-time WebSocket server for Rot Ritual Codex events",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop codex-server",
    "pm2:restart": "pm2 restart codex-server",
    "pm2:logs": "pm2 logs codex-server",
    "health": "curl -f http://localhost:8080/health || exit 1",
    "test-event": "curl -X POST http://localhost:8080/test-event",
    "test-demon": "curl -X POST http://localhost:8080/test-demon -H 'Content-Type: application/json' -d '{\"owner\":\"0x1234567890123456789012345678901234567890\",\"demonId\":\"666\"}'",
    "mock": "MOCK_MODE=true NODE_ENV=development node server.js",
    "test": "node test-events.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "ethers": "^6.8.0",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "websocket",
    "blockchain",
    "ethereum",
    "base",
    "nft",
    "dapp"
  ],
  "author": "Rot Ritual Team",
  "license": "MIT"
}