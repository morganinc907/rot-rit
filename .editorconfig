# ====================================
# ROT RITUAL - EDITOR CONFIG
# ====================================

# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# ===== JAVASCRIPT & TYPESCRIPT =====
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# ===== SOLIDITY =====
[*.sol]
indent_style = space
indent_size = 2

# ===== JSON =====
[*.json]
indent_style = space
indent_size = 2

# ===== YAML =====
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# ===== TOML =====
[*.toml]
indent_style = space
indent_size = 2

# ===== MARKDOWN =====
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# ===== CONFIG FILES =====
[.{eslintrc,babelrc,stylelintrc}]
indent_style = space
indent_size = 2

[package.json]
indent_style = space
indent_size = 2

# ===== SHELL SCRIPTS =====
[*.{sh,bash}]
indent_style = space
indent_size = 2

# ===== FOUNDRY =====
[foundry.toml]
indent_style = space
indent_size = 2

# ===== HARDHAT =====
[hardhat.config.{js,ts}]
indent_style = space
indent_size = 2

# ===== END OF EDITORCONFIG =====